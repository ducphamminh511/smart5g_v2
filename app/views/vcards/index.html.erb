<section class="w3l-coming-soon-page">
    <div class="coming-page-info-6">
        <div class="wrapper">
            <div class="container">
            <div class="row">
                <div class="offset-md-4"></div>
                <div class="col-md-4 text-center"><div class="logo">
                    <a href="<%=root_path%>">
                      <%= image_tag 'logo.png', :class => "img-fluid d-none d-md-block p-5",  lazy: true %>
                      <%= image_tag 'logo.png', :class => "img-fluid d-block d-md-none",  lazy: true %>
