                </div>
                
            </div>
                
                
            </div>
            <div class="coming-block">
                <h3 class="text-white"><%=t('vcards.heading')%></h3>
                <%= form_with url: vcards_path, method: :post do |form| %>
                    <div class="input">
                        <%= form.text_field :name, placeholder: t('contact.name') %>
                    </div>
                    <div class="input">
                        <%= form.text_field :mail, placeholder: t('contact.mail') %>
                    </div>
                    <div class="input">
                        <%= form.text_field :phone, placeholder: t('contact.phone') %>
                    </div>
                    <div class="input">
                        <%= form.text_field :address, placeholder: t('contact.address') %>
                    </div>
                    <div class="input">
                        <%= form.text_field :organization, placeholder: t('contact.organization') %>
                    </div>
                    <div class="input">
                        <%= form.text_field :website, placeholder: t('contact.website') %>
                    </div>
                    
                    <div class="button">
                        <%= form.submit t('vcards.submit') %>
                    </div>
                <% end %>
                <div id="qrcode"><%= raw @svg%></div>
                
            </div>
