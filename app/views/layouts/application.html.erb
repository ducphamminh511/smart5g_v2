                    date: '<%= t('process.step_5.name') %>',
                    content: '<%= t('process.step_5.content') %>'
                },
                {
                    date: '<%= t('process.step_6.name') %>',
                    content: '<%= t('process.step_6.content') %>'
                }
                
            ];

            $('#my-timeline').roadmap(events, {
                eventsPerSlide: 6,
                slide: 1,
                prevArrow: '<i class="fas fa-chevron-left"></i>',
                nextArrow: '<i class="fas fa-chevron-right"></i>'
            });
        });

