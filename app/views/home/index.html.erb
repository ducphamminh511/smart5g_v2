    <section class="contact py-lg-5 py-md-5 py-3" id="contact">
        <div class="container">
            <div class="inner-sec-w3ls py-lg-5 py-3">
                <h3 class="tittle-w3 text-uppercase mb-lg-5 mb-3 text-center text-white"><%= t('contact.heading') %></h3>

                <div class="contact_grid_right">
                    <%= form_with url: contacts_path, method: :post do |form| %>
                        <div class="row contact_left_grid">
                            <div class="col-md-6 con-left" data-aos="fade-up">
                                <div class="form-group">
                                    <%= form.text_field :name, placeholder: t('contact.name') %>
                                </div>
                                <div class="form-group">
                                    <%= form.email_field :mail, placeholder: t('contact.mail') %>
                                </div>
                                <div class="form-group">
                                    <%= form.text_field :phone_number, placeholder: t('contact.phone') %>
                                </div>
                            </div>
                        <div class="col-md-6 con-right" data-aos="fade-up">
                                <div class="form-group">
                                    <%= form.text_area :message, placeholder: t('contact.message') %>
                                </div>
                                
                        </div>
                        </div>
                        <div class="sub-honey mx-auto mt-3 text-center">
                            <%= form.submit t('contact.submit') %>
                        </div>
                    <% end %>
                </div>
                <div class="address row mt-lg-5">

                    <div class="col-md-4 address-grid" data-aos="flip-up">
                        <div class="address-info">
                            <div class="address-left text-center">
                                <i class="fa fa-map-marker"></i>
                            </div>
                            <div class="address-right text-center">
                                <h6 class="my-3">Address</h6>
                                <p> 
                                    Lam Son Str., Tan Binh Dist., HCMC, Vietnam
                                </p>
                            </div>
                        </div>

                    </div>
                    <div class="col-md-4 address-grid" data-aos="flip-up">
                        <div class="address-info">
                            <div class="address-left text-center">
                                <i class="fa fa-envelope"></i>
                            </div>
                            <div class="address-right text-center">
                                <h6 class="my-3">Email</h6>
                                <p>Email :
                                    <a href="mailto:benz@smart5g.vn"> benz@smart5g.vn</a>

                                </p>
                            </div>

                        </div>
                    </div>
                    <div class="col-md-4 address-grid" data-aos="flip-up">
                        <div class="address-info">
                            <div class="address-left text-center">
                                <i class="fa fa-mobile"></i>
                            </div>
                            <div class="address-right text-center">
                                <h6 class="my-3">Phone</h6>
                                <p>Phone:
                                    <a href="tel:+84 969546306">+84 969 546 306</a>
                                </p>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
